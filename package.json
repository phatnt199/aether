{
  "name": "@minimaltech/infra",
  "version": "0.0.1",
  "description": "Minimal Technology Project Infrastructure",
  "scripts": {
    "clean": "bun run --filter \"./packages/*\" clean",
    "build": "bun run --filter \"./packages/*\" build",
    "rebuild": "bun run clean && bun run build",
    "rebuild:node-infra": "bun run --filter \"./packages/node-infra\" rebuild",
    "rebuild:agent-infra": "bun run --filter \"./packages/agent-infra\" rebuild",
    "rebuild:ra-core-infra": "bun run --filter \"./packages/ra-core-infra\" rebuild",
    "rebuild:ra-infra": "bun run --filter \"./packages/ra-infra\" rebuild",
    "rebuild:electron-infra": "bun run --filter \"./packages/electron-infra\" rebuild",
    "rebuild:ignis": "bun run --filter \"./packages/ignis\" rebuild"
  },
  "author": "Phat Nguyen <tanphat199@gmail.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ]
}
